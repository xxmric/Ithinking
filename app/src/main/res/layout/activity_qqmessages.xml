<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:background="@mipmap/qq_bg"
    android:padding="20dp"
    tools:context=".activity.QQMessagesActivity">

    <TextView
        android:id="@+id/iv_message1"
        android:background="@drawable/qq_bg_textview"
        android:maxWidth="200dp"
        android:text="你好啊，好久不见了！最近在忙什么呢？"
        android:textColor="#16476B"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_columnSpan="4"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/iv_user1"
        android:src="@mipmap/qq_ico1"
        android:layout_column="5"
        android:layout_row="0"/>
    <ImageView
        android:id="@+id/iv_user2"
        android:src="@mipmap/qq_ico2"
        android:layout_column="0"
        android:layout_row="1"/>
    <TextView
        android:id="@+id/iv_message2"
        android:background="@drawable/qq_bg_textview2"
        android:maxWidth="200dp"
        android:text="最近在做一个手机应用项目，时间有点紧，所以就很少上QQ"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/iv_message3"
        android:src="@mipmap/qq_a2"
        android:layout_gravity="end"
        android:layout_columnSpan="4"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/iv_user3"
        android:src="@mipmap/qq_ico1"
        android:layout_column="5"
        android:layout_row="2"/>
    <ImageView
        android:id="@+id/iv_user4"
        android:src="@mipmap/qq_ico2"
        android:layout_column="0"
        android:layout_row="3"/>
    <ImageView
        android:id="@+id/iv_message4"
        android:src="@mipmap/qq_b2"
        android:layout_row="1"
        android:layout_marginBottom="20dp"/>

</GridLayout>