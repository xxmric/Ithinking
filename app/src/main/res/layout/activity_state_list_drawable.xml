<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StateListDrawableActivity">

    <EditText
        android:id="@+id/et_stateList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/edittext_focus"
        android:text="当你有使命，它会让你更专注"/>
    <EditText
        android:id="@+id/et_stateList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/edittext_focus"
        android:layout_below="@+id/et_stateList1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="活着就是为了改变世界"/>

    <EditText
        android:id="@+id/et_stateList_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_stateList2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="微信号"/>
    <EditText
        android:id="@+id/et_stateList_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_stateList_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="密码"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/bt_stateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_stateList_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_enable"
        android:textColor="#FFF"
        android:enabled="false"
        android:text="@string/wenxin_login"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_stateList"
        android:text="自定义样式"
        style="@style/title"/>







</RelativeLayout>